{
  "compilerOptions": {
    /* Basic Options */
    "target": "es5",
    "module": "commonjs",

    /* Strict Type-Checking Options */
    "strict": true,

    /* Module Resolution Options */
    "moduleResolution": "node",
    "esModuleInterop": true,
    "outDir": "dist",
    "resolveJsonModule": true,

    /* Advanced Options */
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": [
    "./test"
  ],
  "files": [
    "./hardhat.config.ts"
  ]
}
